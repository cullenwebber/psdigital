{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				<h1 class="text-blue-500">{{post.title}}</h1>
				<div class="article-body text-red-500">
					{{post.content}}
				</div>
			</section>
		</article>
	</div>
	<!-- /content-wrapper -->
{% endblock %}
