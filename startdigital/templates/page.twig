{% extends 'base.twig' %}

{% block content %}
	<div class="grid gap-12">
		{% include "ajax/container.twig" %}
		{% include "ajax/container.twig" with { container: 'data-page-container' } %}
	</div>

	{# Page Builder #}
	{# Loop through the blocks and load their associated file #}
	{% for block in page_builder %}
		<div data-block="{{ block.acf_fc_layout }}">
			{{ include("blocks/" ~ block.acf_fc_layout ~ ".twig", ignore_missing = true) }}
		</div>
	{% endfor %}
{% endblock %}
