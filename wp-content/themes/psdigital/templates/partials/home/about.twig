<section id="fold" class="bg-dark-blue !pt-6 -mt-px">
    <div class="container flex flex-col gap-8 lg:gap-16">
        <div data-stagger="up" class="flex flex-col lg:flex-row justify-between lg:items-end gap-4">
            {% include "icons/about-icon.twig" with { class: "max-w-[160px] lg:max-w-[240px] xl:max-w-[325px] lg:mb-[92px]" } %}
            <div class="text-white block-content">
                {{ post.about.heading }}
            </div>
        </div>
        <div data-stagger="up" class="flex flex-col lg:flex-row justify-between gap-8 lg:gap-24">
            <div class="relative flex w-full cursor-pointer group" id="about-video-trigger">
                <video id="about-video" src="{{ post.about.video.url }}" class="w-full h-full object-cover transition-opacity duration-300 group-hover:opacity-80" playsinline autoplay muted loop></video>
                <!-- Optional: Play icon overlay -->
                <div class="absolute inset-0 flex items-center justify-center">
                    <div class="w-16 h-16 bg-white bg-opacity-20 rounded-full flex items-center justify-center backdrop-blur-sm">
                        <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M8 5v14l11-7z" />
                        </svg>
                    </div>
                </div>
            </div>
            <div class="block-content text-white flex w-full">
                {{ post.about.content }}

                {% include "partials/buttons/button.twig" with { title: post.about.link.title, link: post.about.link.link, target: post.about.link.target, class: 'mt-4' } %}
            </div>
        </div>
    </div>
</section>

<!-- Fullscreen Video Overlay -->
<div id="video-overlay" class="fixed inset-0 z-50 bg-black bg-opacity-95 flex items-center justify-center opacity-0 pointer-events-none">
    <!-- Close Button -->
    <button id="close-video" class="absolute top-4 right-4 z-10 w-12 h-12 bg-white bg-opacity-20 hover:bg-opacity-30 rounded-full flex items-center justify-center backdrop-blur-sm transition-all duration-300 group">
        <svg class="w-6 h-6 text-white group-hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
        <span class="sr-only">
            Close video
        </span>
    </button>

    <!-- Video Container -->
    <div class="relative w-full h-full max-w-7xl mx-4 flex items-center justify-center">
        <video id="fullscreen-video" class="max-w-full max-h-full w-auto h-auto object-contain shadow-2xl" playsinline controls preload="metadata"></video>
    </div>
</div>
