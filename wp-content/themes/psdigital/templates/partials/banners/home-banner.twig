<section	parallax-effect	class="relative !pt-24 sm:!pt-44 3xl:!pt-52 !pb-0 bg-dark-blue text-white h-lvh overflow-hidden flex flex-col justify-end gap-12">
	<img	src="{{ get_image(post.hero.image).src }}"	alt="{{ post.hero.image.alt }}"	class="absolute top-0 inset-0 w-full h-full object-cover object-center z-0" />
	<div	class="absolute inset-0 w-full h-full bg-gradient-to-t from-dark-blue to bg-dark-blue/60 z-10"></div>
	<div	class="container relative z-20 lg:justify-end flex">
		<div	class="flex flex-col !gap-8 max-w-[450px] block-content">
			{{ post.hero.content }}
			<a	href="#fold"	class="size-12 border-pale-green border text-pale-green rounded-lg flex items-center justify-center">
				{% include "icons/down-arrow.twig" with { class: "size-4" } %}
			</a>
		</div>
	</div>
	<h1	class="sr-only">
		PS Digital
	</h1>
	<div	data-infinite-scroll	class="flex flex-row relative w-full z-30 leading-none pb-8">
		{% for _ in 1..2 %}
			<div	data-infinite-inner	class="flex flex-row items-end gap-[2.5vw] pr-[2.5vw] will-change-transform">
				<span	class="text-pale-green font-fraunces text-[13.5vw]">
					Choose
				</span>
				<span	class="text-white font-body text-[12vw]">
					extraordinary.
				</span>
			</div>
		{% endfor %}
	</div>
</section>
