<ul class="relative z-10 items-center hidden lg:flex">
	{% for item in menu.get_items %}
		<li class="{{ item.classes|join(' ') }} relative flex items-center gap-1 group p-6">
			<a target="{{ item.target }}"
				href="{{ item.link }}"
				class="border-b-2 border-transparent transition-all duration-200 ease">
				{{ item.title }}
			</a>
			{% if item.children %}
				{{ include('templates/icons/chevron.twig') }}
				<ul class="flex flex-col gap-4 h-fit absolute bottom-0 left-0 w-[150%] bg-cream z-10 rounded-b-md text-black translate-y-full p-4 opacity-0 pointer-events-none group-hover:opacity-100 group-hover:pointer-events-auto transition-opacity duration-200">
					{% for item in children %}
						<li>
							<a href="{{ item.url }}" target="{{ item.target }}" class="no-underline hover:underline">
								{{ item.title }}
							</a>
						</li>
					{% endfor %}
				</ul>
			{% endif %}
		</li>
	{% endfor %}
</ul>
