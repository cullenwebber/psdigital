<section class="relative">
	<div class="container">
		<div class="grid laptop:grid-cols-2 gap-10 laptop:gap-20">
			<div class="block-content {{ block.image_on_left == true ? 'laptop:order-2' }}">
				{{ block.content }}
			</div>
			<div class="relative rounded-section overflow-hidden aspect-16/9 laptop:aspect-4/3 w-full h-full {{
									block.image_on_left == true
										? 'laptop:order-1'
									}}">
				{% include 'partials/image.twig' with {
					image: get_image(block.image),
					class: 'absolute top-0 left-0 w-full h-full object-cover object-center pointer-events-none',
					alt: block.image.alt
				} %}
			</div>
		</div>
	</div>
</section>
